<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"

    tools:context=".MenuActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/black"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/kiri_24"/>

            <RelativeLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"/>

            <Button
                android:fontFamily="@font/medium"
                android:hint="Search"
                android:drawableRight="@drawable/search"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/white"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_width="5dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/nyamill"/>

        </LinearLayout>

        <!--konten2-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="40dp"
                    android:fontFamily="@font/abril"
                    android:text="MENU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:backgroundTint="@color/white"
                    android:background="@drawable/lavender_border"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <TextView
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seblak Komplit"/>

                    <ImageView
                        android:id="@+id/komplit"
                        android:layout_marginTop="5dp"
                        android:cropToPadding="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/seblak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
                        android:gravity="center"
                        android:fontFamily="@font/abril"
                        android:textStyle="bold"
                        android:text="12.000"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <RelativeLayout
                        android:gravity="right"
                        android:background="@drawable/lavender_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:backgroundTint="@color/teal_700"
                            android:background="@drawable/lavender_border"
                            android:src="@drawable/add"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:backgroundTint="@color/white"
                    android:background="@drawable/lavender_border"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seblak Mie"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/mie"
                        android:layout_marginTop="5dp"
                        android:cropToPadding="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/seblak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abril"
                        android:gravity="center"
                        android:text="8.000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:gravity="right"
                        android:background="@drawable/lavender_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:backgroundTint="@color/teal_700"
                            android:background="@drawable/lavender_border"
                            android:src="@drawable/add"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:backgroundTint="@color/white"
                    android:background="@drawable/lavender_border"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Seblak Baso"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/baso"
                        android:layout_marginTop="5dp"
                        android:cropToPadding="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/seblak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abril"
                        android:gravity="center"
                        android:text="10.000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:gravity="right"
                        android:background="@drawable/lavender_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:backgroundTint="@color/teal_700"
                            android:background="@drawable/lavender_border"
                            android:src="@drawable/add"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:backgroundTint="@color/white"
                    android:background="@drawable/lavender_border"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Boci Ayam Suwir"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/suwir"
                        android:layout_marginTop="5dp"
                        android:cropToPadding="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/seblak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/abril"
                        android:gravity="center"
                        android:text="13.000"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:gravity="right"
                        android:background="@drawable/lavender_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:backgroundTint="@color/teal_700"
                            android:background="@drawable/lavender_border"
                            android:src="@drawable/add"
                            android:layout_width="60dp"
                            android:layout_height="60dp"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:backgroundTint="@color/white"
                    android:background="@drawable/lavender_border"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Boci Tulang Rangu"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/tulang"
                        android:layout_marginTop="5dp"
                        android:cropToPadding="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/seblak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>
                    <TextView
